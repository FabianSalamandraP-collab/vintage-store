---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
import { getProductById, getRelatedProducts, getCategoryById, generateWhatsAppURL, formatPrice } from '../../lib/database.js';
import type { Product } from '../../types';

// Obtener el ID del producto desde la URL
const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/productos');
}

// Obtener el producto
const product = await getProductById(id);

if (!product) {
  return Astro.redirect('/404');
}

// Obtener información adicional
const category = await getCategoryById(product.category);
const relatedProducts = await getRelatedProducts(product, 4);
const whatsappUrl = generateWhatsAppURL(product);

// Información para SEO
const pageTitle = `${product.name} - Sur Occidente`;
const pageDescription = `${product.description} - ${formatPrice(product.price)} - Condición: ${product.condition}. Compra ropa vintage auténtica en Sur Occidente.`;

// Breadcrumbs
const breadcrumbs = [
  { name: 'Inicio', url: '/' },
  { name: 'Productos', url: '/productos' },
  ...(category ? [{ name: category.name, url: `/productos?category=${category.id}` }] : []),
  { name: product.name, url: `/producto/${product.id}` }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="product-detail">
    <!-- Breadcrumbs -->
    <div class="page-header">
      <div class="container">
      </div>
    </div>
    
    <!-- Breadcrumbs -->
    <nav class="breadcrumbs">
      <div class="container">
        <ol class="breadcrumb-list">
          {breadcrumbs.map((item, index) => (
            <li class="breadcrumb-item">
              {index < breadcrumbs.length - 1 ? (
                <a href={item.url}>{item.name}</a>
              ) : (
                <span class="current">{item.name}</span>
              )}
              {index < breadcrumbs.length - 1 && <span class="separator">›</span>}
            </li>
          ))}
        </ol>
      </div>
    </nav>

    <!-- Contenido del producto -->
    <section class="product-content">
      <div class="container">
        <div class="product-layout">
          <!-- Galería de imágenes -->
          <div class="product-gallery">
            <div class="main-image">
              <img 
                src={product.images[0]} 
                alt={product.name}
                id="mainImage"
                class="main-img"
              />
              
              <!-- Badge de condición -->
              <div class="condition-badge">
                {product.condition}
              </div>
            </div>
            
            {product.images.length > 1 && (
              <div class="thumbnail-gallery">
                {product.images.map((image, index) => (
                  <button 
                    class={`thumbnail ${index === 0 ? 'active' : ''}`}
                    data-image={image}
                    data-index={index}
                  >
                    <img src={image} alt={`${product.name} - Vista ${index + 1}`} />
                  </button>
                ))}
              </div>
            )}
          </div>

          <!-- Información del producto -->
          <div class="product-info">
            <div class="product-header">
              <h1 class="product-title">{product.name}</h1>
              
              {category && (
                <a href={`/productos?category=${category.id}`} class="category-link">
                  {category.name}
                </a>
              )}
            </div>

            <div class="product-price">
              <span class="price">{formatPrice(product.price)}</span>
              {product.originalPrice && product.originalPrice > product.price && (
                <span class="original-price">{formatPrice(product.originalPrice)}</span>
              )}
            </div>

            <div class="product-description">
              <p>{product.description}</p>
            </div>

            <!-- Detalles del producto -->
            <div class="product-details">
              <div class="detail-item">
                <span class="label">Condición:</span>
                <span class="value condition-{product.condition.toLowerCase()}">
                  {product.condition}
                </span>
              </div>
              
              {product.sizes && product.sizes.length > 0 && (
                <div class="detail-item">
                  <span class="label">Tallas disponibles:</span>
                  <div class="sizes-list">
                    {product.sizes.map(size => (
                      <span class="size-badge">{size}</span>
                    ))}
                  </div>
                </div>
              )}
              
              {product.tags && product.tags.length > 0 && (
                <div class="detail-item">
                  <span class="label">Etiquetas:</span>
                  <div class="tags-list">
                    {product.tags.map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                </div>
              )}
            </div>

            <!-- Acciones -->
            <div class="product-actions">
              <a 
                href={whatsappUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="whatsapp-btn primary"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                </svg>
                Comprar por WhatsApp
              </a>
              
              <button class="share-btn" id="shareBtn">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
                  <polyline points="16,6 12,2 8,6"></polyline>
                  <line x1="12" y1="2" x2="12" y2="15"></line>
                </svg>
                Compartir
              </button>
            </div>

            <!-- Información adicional -->
            <div class="additional-info">
              <div class="info-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 12l2 2 4-4"></path>
                  <path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"></path>
                  <path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"></path>
                  <path d="M12 3v6"></path>
                  <path d="M12 15v6"></path>
                </svg>
                <span>Producto auténtico verificado</span>
              </div>
              
              <div class="info-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <span>Envío a toda Colombia</span>
              </div>
              
              <div class="info-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                  <polyline points="9,22 9,12 15,12 15,22"></polyline>
                </svg>
                <span>Devoluciones en 7 días</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Productos relacionados -->
    {relatedProducts.length > 0 && (
      <section class="related-products">
        <div class="container">
          <h2 class="section-title">Productos relacionados</h2>
          <div class="products-grid">
            {relatedProducts.map(relatedProduct => (
              <ProductCard product={relatedProduct} />
            ))}
          </div>
        </div>
      </section>
    )}
  </main>
</Layout>

<style>
  .product-detail {
    min-height: 100vh;
    background: #fafafa;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  /* Breadcrumbs */
  .breadcrumbs {
    background: white;
    border-bottom: 1px solid #eee;
    padding: 12px 0;
  }
  
  .breadcrumb-list {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 0;
    padding: 0;
    list-style: none;
    font-size: 0.875rem;
  }
  
  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .breadcrumb-item a {
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .breadcrumb-item a:hover {
    color: #dc2626;
  }
  
  .breadcrumb-item .current {
    color: #333;
    font-weight: 500;
  }
  
  .separator {
    color: #999;
    font-size: 0.75rem;
  }
  
  /* Contenido del producto */
  .product-content {
    padding: 40px 0;
  }
  
  .product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }
  
  /* Galería */
  .product-gallery {
    position: sticky;
    top: 20px;
  }
  
  .main-image {
    position: relative;
    margin-bottom: 16px;
    border-radius: 12px;
    overflow: hidden;
    background: white;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }
  
  .main-img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .main-img:hover {
    transform: scale(1.05);
  }
  
  .condition-badge {
    position: absolute;
    top: 16px;
    right: 16px;
    background: rgba(0, 0, 0, 0.8);
    color: #F5DEB3;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .thumbnail-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
    gap: 8px;
  }
  
  .thumbnail {
    border: 2px solid transparent;
    border-radius: 8px;
    overflow: hidden;
    background: none;
    padding: 0;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .thumbnail.active {
    border-color: #dc2626;
  }
  
  .thumbnail img {
    width: 100%;
    height: 80px;
    object-fit: cover;
    display: block;
  }
  
  .thumbnail:hover {
    border-color: #dc2626;
    opacity: 0.8;
  }
  
  /* Información del producto */
  .product-info {
    background: white;
    padding: 32px;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }
  
  .product-header {
    margin-bottom: 16px;
  }
  
  .product-title {
    margin: 0 0 8px 0;
    font-size: 2rem;
    font-weight: 700;
    color: #333;
    line-height: 1.2;
  }
  
  .category-link {
    display: inline-block;
    color: #dc2626;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: opacity 0.2s ease;
  }
  
  .category-link:hover {
    opacity: 0.8;
  }
  
  .product-price {
    margin-bottom: 24px;
  }
  
  .price {
    font-size: 2.25rem;
    font-weight: 700;
    color: #dc2626;
  }
  
  .original-price {
    margin-left: 12px;
    font-size: 1.25rem;
    color: #999;
    text-decoration: line-through;
  }
  
  .product-description {
    margin-bottom: 32px;
    font-size: 1.1rem;
    line-height: 1.6;
    color: #666;
  }
  
  /* Detalles */
  .product-details {
    margin-bottom: 32px;
    padding: 24px 0;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
  }
  
  .detail-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 16px;
  }
  
  .detail-item:last-child {
    margin-bottom: 0;
  }
  
  .detail-item .label {
    font-weight: 600;
    color: #333;
    min-width: 120px;
    flex-shrink: 0;
  }
  
  .detail-item .value {
    color: #666;
  }
  
  .condition-excelente {
    color: #28a745;
  }
  
  .condition-buena {
    color: #dc2626;
  }
  
  .condition-regular {
    color: #dc2626;
  }
  
  .sizes-list,
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  
  .size-badge {
    background: #f8f9fa;
    border: 1px solid #dee2e6;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  .tag {
    background: #dc2626;
    color: #F5DEB3;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  /* Acciones */
  .product-actions {
    display: flex;
    gap: 12px;
    margin-bottom: 32px;
  }
  
  .whatsapp-btn {
    flex: 1;
    background: #25D366;
    color: #F5DEB3;
    text-decoration: none;
    padding: 16px 24px;
    border-radius: 8px;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
  }
  
  .whatsapp-btn:hover {
    background: #1da851;
    transform: translateY(-1px);
  }
  
  .share-btn {
    background: white;
    border: 2px solid #ddd;
    color: #666;
    padding: 16px 20px;
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 6px;
    transition: all 0.2s ease;
    font-weight: 500;
  }
  
  .share-btn:hover {
    border-color: #dc2626;
    color: #dc2626;
  }
  
  /* Información adicional */
  .additional-info {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.875rem;
    color: #666;
  }
  
  .info-item svg {
    color: #dc2626;
    flex-shrink: 0;
  }
  
  /* Productos relacionados */
  .related-products {
    padding: 60px 0;
    background: white;
  }
  
  .section-title {
    text-align: center;
    margin: 0 0 40px 0;
    font-size: 2rem;
    font-weight: 700;
    color: #333;
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .product-layout {
      gap: 40px;
    }
  }
  
  @media (max-width: 768px) {
    .product-layout {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    
    .product-gallery {
      position: static;
    }
    
    .main-img {
      height: 400px;
    }
    
    .product-info {
      padding: 24px 20px;
    }
    
    .product-title {
      font-size: 1.5rem;
    }
    
    .price {
      font-size: 1.75rem;
    }
    
    .product-actions {
      flex-direction: column;
    }
    
    .detail-item {
      flex-direction: column;
      gap: 4px;
    }
    
    .detail-item .label {
      min-width: auto;
    }
  }
  
  @media (max-width: 480px) {
    .container {
      padding: 0 16px;
    }
    
    .main-img {
      height: 300px;
    }
    
    .thumbnail-gallery {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mainImage = document.getElementById('mainImage');
    const thumbnails = document.querySelectorAll('.thumbnail');
    const shareBtn = document.getElementById('shareBtn');
    
    // Cambiar imagen principal
    thumbnails.forEach(thumbnail => {
      thumbnail.addEventListener('click', function() {
        const newImage = this.dataset.image;
        const index = this.dataset.index;
        
        if (mainImage && newImage) {
          mainImage.src = newImage;
          mainImage.alt = `${mainImage.alt.split(' - Vista')[0]} - Vista ${parseInt(index) + 1}`;
        }
        
        // Actualizar thumbnail activo
        thumbnails.forEach(t => t.classList.remove('active'));
        this.classList.add('active');
      });
    });
    
    // Compartir producto
    shareBtn?.addEventListener('click', async function() {
      const url = window.location.href;
      const title = document.title;
      
      if (navigator.share) {
        try {
          await navigator.share({
            title: title,
            url: url
          });
        } catch (error) {
          console.log('Error sharing:', error);
          fallbackShare(url);
        }
      } else {
        fallbackShare(url);
      }
    });
    
    function fallbackShare(url) {
      navigator.clipboard.writeText(url).then(() => {
        // Mostrar notificación
        const notification = document.createElement('div');
        notification.textContent = '¡Enlace copiado al portapapeles!';
        notification.style.cssText = `
          position: fixed;
          top: 20px;
          right: 20px;
          background: #28a745;
          color: #F5DEB3;
          padding: 12px 20px;
          border-radius: 8px;
          z-index: 1000;
          font-weight: 500;
        `;
        
        document.body.appendChild(notification);
        
        setTimeout(() => {
          notification.remove();
        }, 3000);
      }).catch(() => {
        alert('No se pudo copiar el enlace');
      });
    }
  });
</script>