---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
// import SpotifyPlayer from '../components/SpotifyPlayer.astro';
import { getFeaturedProducts, getSiteConfig } from '../lib/database.js';
import type { Product } from '../types';

const featuredProducts = await getFeaturedProducts();
const siteConfig = getSiteConfig();
const whatsappPhone = String(siteConfig?.contact?.whatsapp || '').replace(/[^0-9]/g, '');

const seoTitle = `${siteConfig.name} | ${siteConfig.description}`;
const seoDescription = `Descubre ${siteConfig.name}, tu tienda de ropa vintage en línea. Encuentra piezas únicas de los años 80, 90 y 2000. Camisetas vintage, vinilos clásicos y accesorios retro. ¡Envíos a toda Colombia!`;
const seoKeywords = siteConfig.seo.keywords;
---

<Layout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  ogImage="/images/og-home.jpg"
>
  <!-- Hero Section -->
  <section class="hero fade-in">
    <div class="hero-content fade-in">
      <!-- Logo en la página principal -->
      <div class="hero-logo fade-in">
        <img 
          src="/clothesSurOccidente.png" 
          alt="Sur Occidente - Bosa, Bogotá" 
          class="hero-logo-img"
          width="220"
          height="220"
          loading="eager"
          decoding="sync"
          style="display: block !important; visibility: visible !important; opacity: 1 !important; width: 220px !important; height: 220px !important; object-fit: contain !important;"
        />
      </div>
      
      <img src="/so.png" alt="SUR OCCIDENTE" class="hero-title fade-in" />
      <p class="hero-subtitle fade-in">
        Descubre piezas únicas de ropa vintage, vinilos clásicos y accesorios retro. 
        Cada artículo cuenta una historia y define tu estilo personal.
      </p>
      

      
      <div class="hero-actions fade-in">
        <a href="/productos" class="btn btn-image" aria-label="Explorar Productos">
          <img src="/explora.png" alt="Explorar Productos" />
        </a>
        <a href={`https://wa.me/${whatsappPhone}?text=${encodeURIComponent('¡Hola! Me interesa conocer más sobre Sur Occidente')}`}
           class="btn btn-image"
           target="_blank"
           rel="noopener noreferrer"
           aria-label="Contactar WhatsApp">
          <img src="/wapp.png" alt="Contactar WhatsApp" />
        </a>
      </div>
    </div>
    
    <div class="hero-image">
      <img src="/prueba01.jpg" 
           alt="Tienda de ropa vintage Sur Occidente" 
           loading="eager" />
    </div>
  </section>

  <!-- Featured Products Section -->
  <section class="featured-products fade-in">
    <div class="container">
      <div class="section-header fade-in">
        <h2 class="section-title">Productos Destacados</h2>
        <p class="section-subtitle">
          Descubre nuestras piezas más populares y únicas
        </p>
      </div>
      
      <div class="products-grid fade-in">
        {featuredProducts.map((product: Product) => (
          <ProductCard product={product} />
        ))}
      </div>
      
      <div class="section-footer fade-in">
        <a href="/productos" class="btn btn-outline">
          Ver Todos los Productos
        </a>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="categories fade-in">
    <div class="container">
      <div class="section-header fade-in">
        <h2 class="section-title">Nuestras Categorías</h2>
        <p class="section-subtitle">
          Explora nuestra colección organizada por categorías
        </p>
      </div>
      
      <div class="categories-grid fade-in">
        <a href="/productos?category=camisetas" class="category-card">
          <div class="category-image">
            <img src="/images/placeholder.jpg" 
                 alt="Camisetas Vintage" 
                 loading="lazy" />
          </div>
          <div class="category-content">
            <h3>Camisetas Vintage</h3>
            <p>Diseños únicos de los 80s, 90s y 2000s</p>
          </div>
        </a>
        
        <a href="/productos?categoria=vinilos" class="category-card">
          <div class="category-image">
            <img src="/images/placeholder.jpg" 
                 alt="Vinilos Clásicos" 
                 loading="lazy" />
          </div>
          <div class="category-content">
            <h3>Vinilos Clásicos</h3>
            <p>Música que marcó generaciones</p>
          </div>
        </a>
        
        <a href="/productos?categoria=accesorios" class="category-card">
          <div class="category-image">
            <img src="/images/placeholder.jpg" 
                 alt="Accesorios Retro" 
                 loading="lazy" />
          </div>
          <div class="category-content">
            <h3>Accesorios Retro</h3>
            <p>Complementos que definen tu estilo</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Sección de Música -->
  <section class="music-section" aria-label="Música">
    <div class="music-container">
      <div class="music-header">
        <h2 class="music-title">Música Vintage</h2>
        <p style="color: #CD853F; margin: 0.5rem 0;">La música que inspira nuestro estilo vintage</p>
      </div>
      
      <!-- Enlaces de música -->
      <div class="music-links">
        <a 
          href="#"
          class="music-link"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Próximamente"
        >
          🎧 Próximamente
        </a>
      </div>
    </div>
  </section>

  <!-- Videos de Artistas Section -->
  <section class="artist-videos">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Videos de Nuestros Artistas</h2>
        <p class="section-subtitle">
          Descubre el talento del hip hop y reggaetón colombiano
        </p>
      </div>
      <div class="videos-grid">
        <div class="video-item">
          <iframe 
            src="https://www.youtube.com/embed/CRHyBwNtkLA" 
            title="MF DOOM - Doomsday"
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
          <div class="video-info">
            <h3>MF DOOM</h3>
            <p>Doomsday (1999) - Hip Hop Clásico</p>
          </div>
        </div>
        <div class="video-item">
          <iframe 
            src="https://www.youtube.com/embed/fJuNgBkloFE" 
            title="The Notorious B.I.G. - Juicy"
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
          <div class="video-info">
            <h3>The Notorious B.I.G.</h3>
            <p>Juicy (1994) - Hip Hop Clásico</p>
          </div>
        </div>
        <div class="video-item">
          <iframe 
            src="https://www.youtube.com/embed/DkFJE8ZdeG8" 
            title="ChocQuibTown - Somos Pacífico"
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
          <div class="video-info">
            <h3>ChocQuibTown</h3>
            <p>Somos Pacífico - Hip Hop Colombiano Actual</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Eventos y Conciertos Section -->
  <section class="events-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Próximos Eventos y Conciertos</h2>
        <p class="section-subtitle">
          No te pierdas los mejores eventos de música urbana
        </p>
      </div>
      <div class="events-grid">
        <div class="event-card" style="background-image: url('/images/placeholder.jpg');">
          <div class="event-overlay"></div>
          <div class="event-content">
            <div class="event-date">
              <span class="day">15</span>
              <span class="month">DIC</span>
            </div>
            <div class="event-info">
              <h3>Festival Hip Hop Cali</h3>
              <p class="event-artist">MC Flow & Invitados</p>
              <p class="event-location">📍 Parque del Perro, Cali</p>
              <p class="event-time">🕒 8:00 PM</p>
            </div>
            <div class="event-action">
              <a href="#" class="btn btn-primary">Comprar Boletos</a>
            </div>
          </div>
        </div>
        <div class="event-card" style="background-image: url('/images/placeholder.jpg');">
          <div class="event-overlay"></div>
          <div class="event-content">
            <div class="event-date">
              <span class="day">22</span>
              <span class="month">DIC</span>
            </div>
            <div class="event-info">
              <h3>Noche de Reggaetón</h3>
              <p class="event-artist">Reggae King</p>
              <p class="event-location">📍 Club La Topa Tolondra</p>
              <p class="event-time">🕒 10:00 PM</p>
            </div>
            <div class="event-action">
              <a href="#" class="btn btn-primary">Comprar Boletos</a>
            </div>
          </div>
        </div>
      </div>
      <div class="section-footer">
        <a href="/nosotros" class="btn btn-outline">
          Conoce Más Sobre Nosotros
        </a>
      </div>
    </div>
  </section>

  <!-- Contact CTA Section -->
  <section class="contact-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">¿Tienes Preguntas?</h2>
        <p class="cta-description">
          Estamos aquí para ayudarte a encontrar esa pieza vintage perfecta
        </p>
        <div class="cta-actions">
          <a href="/contacto" class="btn btn-primary">
            Contáctanos
          </a>
          <a href={`https://wa.me/${whatsappPhone}`} 
             class="btn btn-secondary" 
             target="_blank" 
             rel="noopener noreferrer">
            WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    background: 
      linear-gradient(135deg, rgba(220, 38, 38, 0.4) 0%, rgba(239, 68, 68, 0.4) 100%),
      url('/Fondograffiti.png');
    background-size: cover;
    background-position: center 40%;
    background-repeat: no-repeat;
    background-attachment: fixed;
    color: #F5DEB3;
    padding: 2rem 2rem 4rem 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    justify-items: center;
    min-height: 60vh;
    max-width: 1400px;
    margin: 0 auto;
    margin-top: -2rem;
  }
  
  .hero-content {
    width: 100%;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  /* Estilos para el logo del hero - SIN ANIMACIONES */
  .hero-logo {
    margin-bottom: 2rem;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    z-index: 999 !important;
    position: relative !important;
    width: 100% !important;
    height: auto !important;
    min-height: 200px !important;
  }

  .hero-logo-img {
    width: 220px !important;
    height: 220px !important;
    object-fit: contain !important;
    display: block !important;
    max-width: 100% !important;
    visibility: visible !important;
    opacity: 1 !important;
    animation: logoFloat 4s ease-in-out infinite, logoGlow 3s ease-in-out infinite;
    transition: transform 0.3s ease;
  }

  .hero-logo-img:hover {
    transform: scale(1.1) rotate(5deg);
    animation-play-state: paused;
  }

  @keyframes logoFloat {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    25% {
      transform: translateY(-10px) rotate(2deg);
    }
    50% {
      transform: translateY(-5px) rotate(0deg);
    }
    75% {
      transform: translateY(-15px) rotate(-2deg);
    }
  }

  @keyframes logoGlow {
    0%, 100% {
      filter: drop-shadow(0 0 10px rgba(245, 222, 179, 0.3));
    }
    50% {
      filter: drop-shadow(0 0 25px rgba(245, 222, 179, 0.6)) drop-shadow(0 0 35px rgba(255, 215, 0, 0.4));
    }
  }
  
  .hero-title {
    height: 6rem;
    width: auto;
    max-width: 500px;
    object-fit: contain;
    margin-bottom: 1rem;
  }
  
  .brand-name {
    color: #F5DEB3;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }
  
  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    line-height: 1.4;
    max-width: 500px;
  }
  

  
  .hero-description {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    opacity: 0.8;
    line-height: 1.6;
  }
  
  .hero-actions {
    display: flex !important;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
    z-index: 10;
    position: relative;
    visibility: visible !important;
    opacity: 1 !important;
  }
  
  .hero-image {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .hero-image img {
    width: 100%;
    max-width: 500px;
    height: 400px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    transform: translateY(-24px);
    transition: transform 0.3s ease;
  }
  
  /* Buttons */
  .btn {
    display: inline-flex !important;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    visibility: visible !important;
    opacity: 1 !important;
    z-index: 10;
    position: relative;
  }
  
  .btn-primary {
    background: white;
    color: #dc2626;
  }
  
  .btn-primary:hover {
    background: #f8f9fa;
    transform: translateY(-2px);
  }

  /* Botón con imagen */
  .btn-image {
    background: transparent;
    border: none;
    padding: 0;
    box-shadow: none;
    outline: none;
  }
  .btn-image img {
    height: 120px;
    width: auto;
    display: block;
    object-fit: contain;
    border-radius: 0;
    box-shadow: none;
  }

  /* Explora más grande específicamente */
  .hero-actions .btn-image[href="/productos"] img {
    height: 148px;
  }
  
  .btn-secondary {
    background: transparent;
    color: #F5DEB3;
    border-color: #F5DEB3;
  }
  
  .btn-secondary:hover {
    background: #F5DEB3;
    color: #dc2626;
  }
  
  .btn-outline {
      background: transparent;
      color: #dc2626;
      border-color: #dc2626;
    }
  
  .btn-outline:hover {
    background: #dc2626;
    color: #F5DEB3;
  }
  
  /* Sections */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .featured-products,
  .categories,
  .music-section,
  .artist-videos,
  .events-section,
  .contact-cta {
    padding: 4rem 0;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 1rem;
  }
  
  .section-subtitle {
    font-size: 1.2rem;
    color: #718096;
    max-width: 600px;
    margin: 0 auto;
  }
  
  /* Mantener el color blanco hueso solo en la sección de productos destacados */
  .featured-products .section-title {
    color: #F5DEB3;
  }
  
  .featured-products .section-subtitle {
    color: #F5DEB3;
  }
  
  .section-footer {
    text-align: center;
    margin-top: 3rem;
  }
  
  /* Products Grid */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  /* Categories Grid */
  .categories {
    background: #f7fafc;
  }

  /* Music Section */
  .music-section {
    background: #f7fafc;
    position: relative;
  }

  .music-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(255, 107, 53, 0.05) 0%, rgba(247, 147, 30, 0.05) 100%);
    pointer-events: none;
  }

  .music-section .container {
    position: relative;
    z-index: 1;
  }
  
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .category-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }
  
  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.15);
  }
  
  .category-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .category-content {
    padding: 1.5rem;
  }
  
  .category-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.5rem;
  }
  
  .category-content p {
    color: #718096;
  }
  
  /* About Preview */
  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  .about-text {
    max-width: 500px;
  }
  
  .about-description {
    font-size: 1.1rem;
    color: #4a5568;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .about-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 12px;
  }
  
  /* Contact CTA */
  .contact-cta {
    background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
    color: #F5DEB3;
  }
  
  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  .cta-description {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }
  
  .cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  /* Music Section Styles */
  .music-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
  }
  
  .music-header {
    margin-bottom: 2rem;
  }
  
  .music-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 1rem;
  }
  
  .music-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1rem;
    justify-content: center;
    align-items: center;
  }
  
  .music-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #dc2626, #ef4444);
    color: #F5DEB3;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 500;
    transition: all 0.3s ease;
    text-align: center;
  }
  
  .music-link:hover {
    background: linear-gradient(135deg, #ef4444, #dc2626);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 3rem 1rem;
      gap: 2rem;
      min-height: auto;
    }
    
    .hero-content {
      padding: 1rem;
    }
    
    .hero-title {
      font-size: 2.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.2rem;
    }
    
    .hero-stats {
      gap: 1.5rem;
      margin: 1.5rem 0;
    }
    
    .stat-number {
      font-size: 1.5rem;
    }
    
    .about-content {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .cta-title {
      font-size: 2rem;
    }
    
    .hero-actions,
    .cta-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
    
    .music-links {
      gap: 0.5rem;
    }
    
    .music-link {
      padding: 0.4rem 0.8rem;
      font-size: 0.9rem;
    }
    
    .videos-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .events-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .event-card {
      flex-direction: column;
      text-align: center;
      padding: 1.5rem;
      min-height: auto;
      gap: 1.5rem;
    }
    
    .event-date {
      margin-bottom: 0;
      align-self: center;
      min-width: 100px;
    }
    
    .event-info {
      order: 2;
    }
    
    .event-action {
      order: 3;
      justify-content: center;
    }
    
    .event-info h3 {
      font-size: 1.25rem;
      margin-bottom: 0.5rem;
    }
    
    .event-artist {
      font-size: 1rem;
      margin-bottom: 0.75rem;
    }
    
    .event-location,
    .event-time {
      font-size: 0.9rem;
      justify-content: center;
    }
  }
  
  /* Videos Section */
  .artist-videos {
    background: #f7fafc;
  }
  
  .videos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .video-item {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }
  
  .video-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.15);
  }
  
