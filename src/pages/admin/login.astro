export const prerender = false;

// Sistema de Login Seguro para Admin - Sur Occidente
import Layout from '../../layouts/Layout.astro';
import crypto from 'crypto';
import { verifyPassword as verifyPasswordHash } from '../../utils/auth.js'
import { loginRateLimit } from '../../middleware/auth.js'

// Configuración de seguridad
const SECURITY_CONFIG = {
  maxFailedAttempts: 5,
  lockoutDuration: 15 * 60 * 1000, // 15 minutos
  sessionTimeout: 30 * 60 * 1000, // 30 minutos
  requireCaptcha: true,
  passwordHash: process.env.ADMIN_PASSWORD_HASH || null,
  secretKey: process.env.JWT_SECRET || 'fallback-secret-key'
};

// Verificar si ya está logueado
const cookies = Astro.cookies;
const adminSession = cookies.get('admin_session')?.value;

if (adminSession) {
  try {
    const sessionData = JSON.parse(atob(adminSession));
    const now = new Date().getTime();
    if (now - new Date(sessionData.loginTime).getTime() < SECURITY_CONFIG.sessionTimeout) {
      return Astro.redirect('/admin');
    } else {
      // Sesión expirada
      cookies.delete('admin_session', { path: '/' });
    }
  } catch (error) {
    cookies.delete('admin_session', { path: '/' });
  }
}

// Obtener IP del cliente
const clientIP = Astro.request.headers.get('x-forwarded-for') || 
                Astro.request.headers.get('x-real-ip') || 
                'unknown';

// Gestión de intentos fallidos (en producción usar base de datos)
let failedAttempts = {};
let loginError = '';
let isLocked = false;
let requireCaptcha = false;

// Verificar bloqueo por IP
const attemptKey = `failed_${clientIP}`;
if (failedAttempts[attemptKey]) {
  const attempts = failedAttempts[attemptKey];
  if (attempts.count >= SECURITY_CONFIG.maxFailedAttempts) {
    const timeSinceLastAttempt = new Date().getTime() - attempts.lastAttempt;
    if (timeSinceLastAttempt < SECURITY_CONFIG.lockoutDuration) {
      isLocked = true;
      const remainingTime = Math.ceil((SECURITY_CONFIG.lockoutDuration - timeSinceLastAttempt) / 60000);
      loginError = `Cuenta bloqueada. Intenta de nuevo en ${remainingTime} minutos.`;
    } else {
      // Reset después del tiempo de bloqueo
      delete failedAttempts[attemptKey];
    }
  } else if (attempts.count >= 3) {
    requireCaptcha = true;
  }
}

// Función para verificar contraseña
async function verifyPassword(password, hash) {
  // Si hay hash, usar bcryptjs para verificar
  if (hash) {
    try {
      return await verifyPasswordHash(password, hash);
    } catch (e) {
      return false;
    }
  }
  // Fallback a contraseña en texto plano solo para desarrollo
  const configuredPassword = process.env.ADMIN_DEFAULT_PASSWORD || 'admin123';
  return password === configuredPassword;
}

// Manejar envío del formulario
if (Astro.request.method === 'POST' && !isLocked) {
  // Rate limit de intentos de login
  const rl = loginRateLimit(Astro.request);
  if (rl) {
    return rl;
  }
  try {
    const formData = await Astro.request.formData();
    const username = formData.get('username')?.toString();
    const password = formData.get('password')?.toString();
    const captcha = formData.get('captcha')?.toString();
    const rememberMe = formData.get('rememberMe') === 'on';
    
    // Validaciones
    if (!username || !password) {
      loginError = 'Usuario y contraseña son requeridos';
    } else if (requireCaptcha && (!captcha || captcha !== '7')) {
      loginError = 'CAPTCHA incorrecto';
    } else if (username === 'admin' && await verifyPassword(password, SECURITY_CONFIG.passwordHash)) {
      // Login exitoso
      const sessionData = {
        user: 'admin',
        loginTime: new Date().toISOString(),
        ip: clientIP,
        userAgent: Astro.request.headers.get('user-agent') || 'unknown',
        sessionId: crypto.randomUUID()
      };
      
      const sessionToken = btoa(JSON.stringify(sessionData));
      
      // Limpiar intentos fallidos
      delete failedAttempts[attemptKey];
      
      // Establecer cookie de sesión
      const maxAge = rememberMe ? 7 * 24 * 60 * 60 : 30 * 60; // 7 días o 30 minutos
      cookies.set('admin_session', sessionToken, {
        httpOnly: true,
        secure: process.env.NODE_ENV === 'production',
        sameSite: 'strict',
        maxAge: maxAge,
        path: '/'
      });
      
      // Log de seguridad (en producción guardar en base de datos)
      console.log(`[SECURITY] Login exitoso: ${username} desde ${clientIP}`);
      
      return Astro.redirect('/admin');
    } else {
      // Login fallido
      if (!failedAttempts[attemptKey]) {
        failedAttempts[attemptKey] = { count: 0, lastAttempt: 0 };
      }
      failedAttempts[attemptKey].count++;
      failedAttempts[attemptKey].lastAttempt = new Date().getTime();
      
      // Log de seguridad
      console.log(`[SECURITY] Login fallido: ${username} desde ${clientIP} (intento ${failedAttempts[attemptKey].count})`);
      
      if (failedAttempts[attemptKey].count >= SECURITY_CONFIG.maxFailedAttempts) {
        loginError = 'Demasiados intentos fallidos. Cuenta bloqueada por 15 minutos.';
        isLocked = true;
      } else {
        loginError = 'Credenciales incorrectas';
        if (failedAttempts[attemptKey].count >= 3) {
          requireCaptcha = true;
        }
      }
    }
  } catch (error) {
    loginError = 'Error en el sistema de autenticación';
    console.error('Login error:', error);
  }
}
---

<Layout title="Login Admin - Sur Occidente">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .login-container {
      background: white;
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      width: 100%;
      max-width: 400px;
    }

    .login-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .login-title {
      font-size: 1.875rem;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 0.5rem;
    }

    .login-subtitle {
      color: #6b7280;
      font-size: 0.875rem;
    }

    .error-message {
      background: #fef2f2;
      border: 1px solid #fecaca;
      color: #dc2626;
      padding: 0.75rem;
      border-radius: 0.5rem;
      margin-bottom: 1rem;
      font-size: 0.875rem;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-label {
      display: block;
      margin-bottom: 0.5rem;
      color: #374151;
      font-weight: 500;
      font-size: 0.875rem;
    }

    .form-input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #d1d5db;
      border-radius: 0.5rem;
      font-size: 1rem;
      transition: border-color 0.2s, box-shadow 0.2s;
    }

    .form-input:focus {
      outline: none;
      border-color: #3b82f6;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .captcha-group {
      background: #f3f4f6;
      padding: 1rem;
      border-radius: 0.5rem;
      border: 2px solid #fbbf24;
    }

    .captcha-input {
      max-width: 100px;
      text-align: center;
      font-weight: bold;
    }

    .checkbox-group {
      display: flex;
      align-items: center;
      margin-bottom: 1rem;
    }

    .checkbox-label {
      display: flex;
      align-items: center;
      cursor: pointer;
      font-size: 0.875rem;
      color: #6b7280;
    }

    .checkbox-input {
      margin-right: 0.5rem;
      width: 16px;
      height: 16px;
    }

    .security-info {
      background: #eff6ff;
      border: 1px solid #bfdbfe;
      border-radius: 0.5rem;
      padding: 1rem;
      margin-bottom: 1.5rem;
      font-size: 0.875rem;
      color: #1e40af;
    }

    .security-info h4 {
      margin: 0 0 0.5rem 0;
      font-weight: 600;
    }

    .security-info ul {
      margin: 0;
      padding-left: 1.25rem;
    }

    .security-info li {
      margin-bottom: 0.25rem;
    }

    .login-btn {
      width: 100%;
      background: #3b82f6;
      color: white;
      border: none;
      padding: 0.75rem;
      border-radius: 0.5rem;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.2s;
    }

    .login-btn:hover {
      background: #2563eb;
    }

    .login-btn:disabled {
      background: #9ca3af;
      cursor: not-allowed;
    }

    .demo-info {
      margin-top: 1.5rem;
      padding: 1rem;
      background: #f9fafb;
      border-radius: 0.5rem;
      border: 1px solid #e5e7eb;
    }

    .demo-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: #374151;
      margin-bottom: 0.5rem;
    }

    .demo-password {
      font-family: monospace;
      background: #1f2937;
      color: #f9fafb;
      padding: 0.5rem;
      border-radius: 0.25rem;
      font-size: 0.875rem;
      text-align: center;
    }

    @media (max-width: 480px) {
      .login-container {
        margin: 1rem;
        padding: 1.5rem;
      }
    }
  </style>

  <div class="login-container">
    <div class="login-header">
      <h1 class="login-title">Admin Panel</h1>
      <p class="login-subtitle">Sur Occidente - Acceso Administrativo</p>
    </div>

    <form method="POST">
      {loginError && (
        <div class="error-message">
          {loginError}
        </div>
      )}

      <div class="security-info">
        <h4>Sistema de Seguridad Mejorado</h4>
        <ul>
          <li>Máximo 5 intentos de login fallidos</li>
          <li>Bloqueo automático por 15 minutos tras intentos fallidos</li>
          <li>CAPTCHA requerido después de 3 intentos fallidos</li>
          <li>Sesiones seguras con expiración automática</li>
          <li>Monitoreo de actividad sospechosa</li>
        </ul>
      </div>

      <div class="form-group">
        <label for="username" class="form-label">Usuario</label>
        <input 
          type="text" 
          id="username" 
          name="username" 
          class="form-input" 
          placeholder="Ingresa tu usuario"
          required
          autocomplete="username"
          value="admin"
        >
      </div>

      <div class="form-group">
        <label for="password" class="form-label">Contraseña de Administrador</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          class="form-input" 
          placeholder="Ingresa la contraseña"
          required
          autocomplete="current-password"
        >
      </div>

      {requireCaptcha && (
        <div class="form-group">
          <label for="captcha" class="form-label">Verificación: ¿Cuánto es 3 + 4?</label>
          <input 
            type="text" 
            id="captcha" 
            name="captcha" 
            class="form-input" 
            placeholder="Respuesta"
            required
          >
        </div>
      )}

      <div class="form-group">
        <label class="form-label">
          <input type="checkbox" name="rememberMe" style="margin-right: 8px;" />
          Recordar sesión por 7 días
        </label>
      </div>

      <button type="submit" class="login-btn" disabled={isLocked}>
        {isLocked ? 'Bloqueado' : 'Acceder al Panel'}
      </button>
    </form>

    <div class="demo-info">
      <div class="demo-title">Contraseña por defecto:</div>
      <div class="demo-password">[CONFIGURADA VÍA ENV]</div>
    </div>
  </div>
</Layout>