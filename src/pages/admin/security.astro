---

<Layout title="Seguridad - Admin Panel">
  <link rel="stylesheet" href="/src/styles/admin.css">
  
  <div class="admin-container">
    <div class="admin-layout">
      <!-- Sidebar -->
      <aside class="admin-sidebar" id="adminSidebar">
        <div class="admin-nav">
          <!-- User Info -->
          <div class="admin-user-info">
            <div class="admin-user-avatar">
              <img src={currentUser.avatar} alt={currentUser.name} onerror="this.src='data:image/svg+xml;base64,'">
            </div>
            <div class="admin-user-details">
              <div class="admin-user-name">{currentUser.name}</div>
              <div class="admin-user-role">{currentUser.role}</div>
            </div>
          </div>

          <!-- Navigation Links -->
          <nav class="admin-nav-links">
            <a href="/admin/dashboard" class="admin-nav-item">
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
              </svg>
              <span>Dashboard</span>
            </a>
            
            <a href="/admin/security" class="admin-nav-item active">
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              <span>Seguridad</span>
            </a>
            
            <a href="/admin/analytics" class="admin-nav-item">
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <span>Analytics</span>
            </a>
            
            <a href="/admin/system" class="admin-nav-item">
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>Sistema</span>
            </a>
            
            <div class="admin-nav-divider"></div>
            
            <a href="/admin/users" class="admin-nav-item">
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
              <span>Usuarios</span>
            </a>
            
            <a href="/admin/products" class="admin-nav-item">
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
              <span>Productos</span>
            </a>
            
            <a href="/admin/orders" class="admin-nav-item">
              <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
              </svg>
              <span>Pedidos</span>
            </a>
          </nav>

          <!-- Logout -->
          <div class="admin-nav-footer">
            <form action="/admin/logout" method="POST" class="admin-logout-form">
              <button type="submit" class="admin-nav-item admin-logout-btn">
                <svg class="admin-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                <span>Cerrar Sesión</span>
              </button>
            </form>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="admin-main">
        <!-- Header -->
        <header class="admin-header">
          <div class="admin-header-left">
            <button class="admin-sidebar-toggle" id="sidebarToggle">
              <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
            <h1>Centro de Seguridad</h1>
          </div>
          
          <div class="admin-header-right">
            <div class="admin-theme-toggle" id="themeToggle"></div>
            <div class="admin-header-time" id="currentTime"></div>
          </div>
        </header>

        <!-- Content -->
        <div class="admin-content">
          <!-- Security Overview -->
          <section class="admin-security-overview">
            <div class="admin-card">
              <div class="admin-card-header">
                <h3 class="admin-card-title">Resumen de Seguridad</h3>
                <div class="admin-threat-level">
                  <span class={`admin-threat-indicator admin-threat-${securityData.overview.threatLevel}`}>
                    <span class="admin-threat-dot"></span>
                    Nivel de Amenaza: {securityData.overview.threatLevel === 'low' ? 'Bajo' : securityData.overview.threatLevel === 'medium' ? 'Medio' : 'Alto'}
                  </span>
                </div>
              </div>
              
              <div class="admin-security-metrics">
                <div class="admin-security-metric">
                  <div class="admin-metric-icon admin-metric-danger">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                  </div>
                  <div class="admin-metric-content">
                    <div class="admin-metric-value">{securityData.overview.activeThreats}</div>
                    <div class="admin-metric-label">Amenazas Activas</div>
                  </div>
                </div>
                
                <div class="admin-security-metric">
                  <div class="admin-metric-icon admin-metric-warning">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18 21l3-3m-3-3l-3-3m3 3l3 3"></path>
                    </svg>
                  </div>
                  <div class="admin-metric-content">
                    <div class="admin-metric-value">{securityData.overview.blockedIPs}</div>
                    <div class="admin-metric-label">IPs Bloqueadas</div>
                  </div>
                </div>
                
                <div class="admin-security-metric">
                  <div class="admin-metric-icon admin-metric-info">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                  </div>
                  <div class="admin-metric-content">
                    <div class="admin-metric-value">{securityData.overview.failedLogins}</div>
                    <div class="admin-metric-label">Intentos Fallidos</div>
                  </div>
                </div>
                
                <div class="admin-security-metric">
                  <div class="admin-metric-icon admin-metric-success">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="admin-metric-content">
                    <div class="admin-metric-value">Último Escaneo</div>
                    <div class="admin-metric-label">{securityData.overview.lastScan}</div>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- Recent Threats -->
          <section class="admin-threats-section">
            <div class="admin-card">
              <div class="admin-card-header">
                <h3 class="admin-card-title">Amenazas Recientes</h3>
                <div class="admin-threats-actions">
                  <button class="admin-btn admin-btn-secondary" id="refreshThreats">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Actualizar
                  </button>
                  <button class="admin-btn admin-btn-primary" id="runSecurityScan">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    Escanear Ahora
                  </button>
                </div>
              </div>
              
              <div class="admin-threats-list">
                {securityData.recentThreats.map(threat => (
                  <div class={`admin-threat-item admin-threat-${threat.severity}`}>
                    <div class="admin-threat-header">
                      <div class="admin-threat-info">
                        <h4 class="admin-threat-type">{threat.type}</h4>
                        <span class="admin-threat-ip">{threat.ip}</span>
                      </div>
                      <div class="admin-threat-meta">
                        <span class={`admin-threat-severity admin-severity-${threat.severity}`}>
                          {threat.severity === 'critical' ? 'Crítico' : threat.severity === 'high' ? 'Alto' : threat.severity === 'medium' ? 'Medio' : 'Bajo'}
                        </span>
                        <span class={`admin-threat-status admin-status-${threat.status}`}>
                          {threat.status === 'blocked' ? 'Bloqueado' : threat.status === 'mitigated' ? 'Mitigado' : 'Activo'}
                        </span>
                      </div>
                    </div>
                    <div class="admin-threat-details">
                      <div class="admin-threat-description">{threat.details}</div>
                      <div class="admin-threat-timestamp">{threat.timestamp}</div>
                    </div>
                    <div class="admin-threat-actions">
                      <button class="admin-btn admin-btn-sm admin-btn-secondary" onclick={`viewThreatDetails(${threat.id})`}>
                        Ver Detalles
                      </button>
                      <button class="admin-btn admin-btn-sm admin-btn-danger" onclick={`blockIP('${threat.ip}')`}>
                        Bloquear IP
                      </button>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </section>

          <!-- IP Management -->
          <section class="admin-ip-management">
            <div class="admin-grid admin-grid-2">
              <!-- Blocked IPs -->
              <div class="admin-card">
                <div class="admin-card-header">
                  <h3 class="admin-card-title">IPs Bloqueadas</h3>
                  <button class="admin-btn admin-btn-secondary" id="addBlockedIP">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Bloquear IP
                  </button>
                </div>
                
                <div class="admin-ip-list">
                  {securityData.blockedIPs.map(blockedIP => (
                    <div class="admin-ip-item">
                      <div class="admin-ip-header">
                        <span class="admin-ip-address">{blockedIP.ip}</span>
                        <span class={`admin-ip-status admin-status-${blockedIP.status}`}>
                          {blockedIP.status === 'active' ? 'Activo' : 'Permanente'}
                        </span>
                      </div>
                      <div class="admin-ip-details">
                        <div class="admin-ip-reason">{blockedIP.reason}</div>
                        <div class="admin-ip-meta">
                          <span>Intentos: {blockedIP.attempts}</span>
                          <span>Bloqueado: {blockedIP.blockedAt}</span>
                          {blockedIP.expiresAt !== 'permanent' && (
                            <span>Expira: {blockedIP.expiresAt}</span>
                          )}
                        </div>
                      </div>
                      <div class="admin-ip-actions">
                        <button class="admin-btn admin-btn-sm admin-btn-secondary" onclick={`editBlockedIP('${blockedIP.ip}')`}>
                          Editar
                        </button>
                        <button class="admin-btn admin-btn-sm admin-btn-success" onclick={`unblockIP('${blockedIP.ip}')`}>
                          Desbloquear
                        </button>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
              
              <!-- Whitelist -->
              <div class="admin-card">
                <div class="admin-card-header">
                  <h3 class="admin-card-title">Lista Blanca</h3>
                  <button class="admin-btn admin-btn-primary" id="addWhitelistIP">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Agregar IP
                  </button>
                </div>
                
                <div class="admin-ip-list">
                  {securityData.whitelist.map(whiteIP => (
                    <div class="admin-ip-item admin-ip-whitelist">
                      <div class="admin-ip-header">
                        <span class="admin-ip-address">{whiteIP.ip}</span>
                        <span class="admin-ip-status admin-status-active">Permitido</span>
                      </div>
                      <div class="admin-ip-details">
                        <div class="admin-ip-description">{whiteIP.description}</div>
                        <div class="admin-ip-meta">
                          <span>Agregado: {whiteIP.addedAt}</span>
                          <span>Por: {whiteIP.addedBy}</span>
                        </div>
                      </div>
                      <div class="admin-ip-actions">
                        <button class="admin-btn admin-btn-sm admin-btn-secondary" onclick={`editWhitelistIP('${whiteIP.ip}')`}>
                          Editar
                        </button>
                        <button class="admin-btn admin-btn-sm admin-btn-danger" onclick={`removeWhitelistIP('${whiteIP.ip}')`}>
                          Eliminar
                        </button>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </section>

          <!-- Failed Login Attempts -->
          <section class="admin-failed-logins">
            <div class="admin-card">
              <div class="admin-card-header">
                <h3 class="admin-card-title">Intentos de Login Fallidos</h3>
                <div class="admin-failed-logins-actions">
                  <input type="text" class="admin-search-input" placeholder="Buscar por IP o usuario..." id="failedLoginsSearch">
                  <button class="admin-btn admin-btn-secondary" id="clearFailedLogins">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Limpiar Todo
                  </button>
                </div>
              </div>
              
              <div class="admin-failed-logins-table">
                <table class="admin-table">
                  <thead>
                    <tr>
                      <th>Usuario</th>
                      <th>IP</th>
                      <th>Fecha/Hora</th>
                      <th>Razón</th>
                      <th>User Agent</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody id="failedLoginsTableBody">
                    {securityData.failedLogins.map(login => (
