<style>
  /* FONDO PRINCIPAL NARANJA VIBRANTE */
  #container {
    min-height: 100vh;
    position: relative;
    overflow-x: hidden;
  }

  #red-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #dc2626 0%, #dc2626 50%, #b91c1c 100%);
    z-index: -1;
  }

  /* SECCIÓN HERO */
  #hero-section {
    padding: 2rem 0 4rem;
    text-align: center;
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  /* Estilos para el logo del hero */
  .hero-logo {
    display: block;
    margin: 0 auto 1rem auto;
    object-fit: contain;
  }

  .main-title {
    font-size: clamp(3rem, 8vw, 8rem);
    font-weight: 900;
    color: #2a1f17;
    text-shadow: 4px 4px 0px rgba(0,0,0,0.3);
    letter-spacing: -0.02em;
    margin: 2rem 0;
    font-family: 'Arial Black', Arial, sans-serif;
    text-transform: uppercase;
  }

  /* FIGURAS SILUETAS (SIMULANDO LAS IMÁGENES) */
  .hero-figures {
    display: flex;
    justify-content: center;
    gap: 4rem;
    margin-top: 2rem;
  }

  .figure-silhouette {
    width: 200px;
    height: 300px;
    background: linear-gradient(135deg, rgba(42, 31, 23, 0.8), rgba(42, 31, 23, 0.6));
    border-radius: 10px;
    position: relative;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
  }

  /* SECCIÓN PRODUCTOS */
  #products-section {
    padding: 4rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    margin-bottom: 4rem;
  }

  /* TARJETAS DE PRODUCTO */
  .product-card {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    cursor: pointer;
  }

  .product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    background: rgba(255, 255, 255, 0.2);
  }

  .product-image {
    width: 100%;
    height: 250px;
    background: rgba(42, 31, 23, 0.8);
    border-radius: 8px;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  .product-card h3 {
    font-size: 1rem;
    font-weight: 700;
    color: #2a1f17;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1.3;
  }

  .price {
    font-size: 1.2rem;
    font-weight: 800;
    color: #2a1f17;
    margin: 0;
  }

  /* BOTÓN WHATSAPP */
  .whatsapp-btn {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 1000;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .wa__btn_popup_icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: #25d366;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #F5DEB3;
    box-shadow: 0 8px 25px rgba(37, 211, 102, 0.4);
    transition: all 0.3s ease;
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
  }

  .whatsapp-btn:hover .wa__btn_popup_icon {
    transform: scale(1.1);
    background: #128C7E;
    animation: none;
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 0 1rem;
    }

    .hero-figures {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }

    .figure-silhouette {
      width: 150px;
      height: 220px;
    }

    .main-title {
      font-size: clamp(2rem, 6vw, 4rem);
    }

    .whatsapp-btn {
      bottom: 16px;
      right: 16px;
    }

    .wa__btn_popup_icon {
      width: 50px;
      height: 50px;
    }
  }

  @media (max-width: 480px) {
    .product-card {
      padding: 1rem;
    }

    .product-image {
      height: 200px;
    }

    .product-card h3 {
      font-size: 0.9rem;
    }
  }

  /* ANIMACIONES DE ENTRADA */
  .product-card {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  .product-card:nth-child(1) { animation-delay: 0.1s; }
  .product-card:nth-child(2) { animation-delay: 0.2s; }
  .product-card:nth-child(3) { animation-delay: 0.3s; }
  .product-card:nth-child(4) { animation-delay: 0.4s; }
  .product-card:nth-child(5) { animation-delay: 0.5s; }
  .product-card:nth-child(6) { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* EFECTOS ADICIONALES */
  .main-title {
    animation: titleGlow 3s ease-in-out infinite alternate;
  }

  @keyframes titleGlow {
    0% { text-shadow: 2px 2px 0px rgba(0,0,0,0.3); }
    100% { text-shadow: 2px 2px 0px rgba(0,0,0,0.3), 0 0 15px rgba(42, 31, 23, 0.5); }
  }
</style>