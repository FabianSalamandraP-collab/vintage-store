---
import type { Product } from '../types';
import { formatPrice, generateWhatsAppURL, getSiteConfig } from '../lib/database.js';

export interface Props {
  product: Product;
  showQuickView?: boolean;
  className?: string;
}

const { product, showQuickView = false, className = '' } = Astro.props;
const siteConfig = getSiteConfig();
const primaryImage = product.images.find(img => img.primary) || product.images[0];
---

<article class={`product-card ${className}`}>
  <div class="product-image-container">
    <a href={generateWhatsAppURL(product, 'Hola, quiero este producto')} target="_blank" rel="noopener noreferrer" class="product-link">
      <img 
        src={primaryImage?.url || '/images/placeholder.svg'} 
        alt={primaryImage?.alt || product.name}
        class="product-image"
        loading="lazy"
      />
      {product.featured && (
        <span class="featured-badge">Destacado</span>
      )}
    </a>
    
    <div class="product-actions">
      <button 
        class="whatsapp-btn"
        onclick={`window.open('${generateWhatsAppURL(product, 'Hola, quiero este producto')}', '_blank')`}
        title="Contactar por WhatsApp"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
        </svg>
      </button>

      <button
        class="wishlist-btn"
        aria-label="Agregar a favoritos"
        aria-pressed="false"
        data-product-id={product.id}
        data-product-name={product.name}
        data-product-price={product.price}
        data-product-image={primaryImage?.url || '/images/placeholder.svg'}
        data-product-url={`/producto/${product.id}`}
        title="Agregar a favoritos">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 6 4 4 6.5 4c1.74 0 3.41 1.01 4.22 2.58C12.09 5.01 13.76 4 15.5 4 18 4 20 6 20 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
      </button>
      
      {showQuickView && (
        <button class="quick-view-btn" title="Vista rápida">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
          </svg>
        </button>
      )}
    </div>
  </div>
  
  <div class="product-info">
    <div class="product-category">
      {product.category.charAt(0).toUpperCase() + product.category.slice(1)}
    </div>
    
    <h3 class="product-name">
      <a href={generateWhatsAppURL(product, 'Hola, quiero este producto')} target="_blank" rel="noopener noreferrer">{product.name}</a>
    </h3>
    
    <p class="product-condition">{product.condition}</p>
    
    {product.sizes.length > 0 && (
      <div class="product-sizes">
        <span class="sizes-label">Tallas:</span>
        {product.sizes.map(size => (
          <span class="size-tag">{size}</span>
        ))}
      </div>
    )}
    
    <div class="product-price">
      {formatPrice(product.price)}
    </div>
  </div>
</article>

<style>
  .product-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    position: relative;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }
  
  .product-image-container {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
  }
  
  .product-link {
    display: block;
    width: 100%;
    height: 100%;
  }
  
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover .product-image {
    transform: scale(1.05);
  }
  
  .featured-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    background: #dc2626;
    color: #F5DEB3;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    z-index: 2;
  }
  
  .product-actions {
    position: absolute;
    top: 16px;
    right: 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    opacity: 0;
    transform: translateX(10px);
    transition: all 0.3s ease;
    z-index: 2;
  }
  
  .product-card:hover .product-actions {
    opacity: 1;
    transform: translateX(0);
  }
  
  .whatsapp-btn,
  .quick-view-btn,
  .wishlist-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  /* Asegura que todos los iconos tengan el mismo tamaño y centrado */
  .product-actions button svg {
    width: 20px;
    height: 20px;
    display: block;
    transform-origin: center;
    will-change: transform;
  }
  
  .whatsapp-btn {
    background: rgba(37, 211, 102, 0.9);
    color: white;
  }
  
  .whatsapp-btn:hover {
    background: #25D366;
    transform: scale(1.1);
  }
  
  .wishlist-btn {
    background: rgba(220, 38, 38, 0.9);
    color: #F5DEB3;
  }
  .wishlist-btn:hover {
    background: #dc2626;
    transform: scale(1.1);
  }
  .wishlist-btn.active {
    background: #b91c1c;
    color: #fff;
    box-shadow: 0 0 0 2px rgba(220, 38, 38, 0.2);
  }
  /* Animación del corazón: se ejecuta cuando entra en estado activo */
  .wishlist-btn.active svg {
    animation: heartBeat 600ms ease;
  }
  /* Sutil acercamiento sólo del icono en hover para evitar desplazamientos */
  .wishlist-btn:hover svg { transform: scale(1.08); }
  @keyframes heartBeat {
    0% { transform: scale(1); }
    30% { transform: scale(1.25); }
    50% { transform: scale(0.95); }
    70% { transform: scale(1.15); }
    100% { transform: scale(1); }
  }
  .quick-view-btn {
    background: rgba(0, 0, 0, 0.7);
    color: white;
  }
  
  .quick-view-btn:hover {
    background: rgba(0, 0, 0, 0.9);
    transform: scale(1.1);
  }
  
  .product-info {
    padding: 20px;
  }
  
  .product-category {
    font-size: 0.75rem;
    color: #dc2626;
    font-weight: 600;
    text-transform: uppercase;
    margin-bottom: 8px;
  }
  
  .product-name {
    margin: 0 0 10px 0;
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.4;
  }
  
  .product-name a {
    color: #1f2937;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .product-name a:hover {
    color: #dc2626;
  }
  
  .product-condition {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0 0 10px 0;
  }
  
  .product-sizes {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 15px;
    flex-wrap: wrap;
  }
  
  .sizes-label {
    font-size: 0.75rem;
    color: #9ca3af;
    font-weight: 500;
  }
  
  .size-tag {
    background: #f3f4f6;
    color: #374151;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .product-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #dc2626;
    margin-top: auto;
  }
  
  @media (max-width: 768px) {
    .product-actions {
      opacity: 1;
      transform: translateX(0);
    }
    
    .product-info {
      padding: 16px;
    }
    
    .whatsapp-btn,
    .quick-view-btn,
    .wishlist-btn {
      width: 36px;
      height: 36px;
    }
  }
</style>