<script>
  // JavaScript para funcionalidad del modal y controles - VERSION CORREGIDA
  document.addEventListener('DOMContentLoaded', function() {
    // Referencias a elementos del DOM
    const eventButton = document.getElementById('eventButton');
    const modal = document.getElementById('eventModal');
    const closeModal = document.getElementById('closeModal');
    const eventForm = document.getElementById('eventForm');
    const playPauseBtn = document.getElementById('playPause');
    const prevTrackBtn = document.getElementById('prevTrack');
    const nextTrackBtn = document.getElementById('nextTrack');

    // Variable para controlar el estado de reproducci√≥n
    let isPlaying = false;

    // Funciones para el modal
    function showEventModal() {
      if (modal) {
        modal.style.display = 'block';
        modal.setAttribute('aria-hidden', 'false');
        // Focus en el primer input del formulario
        const firstInput = modal.querySelector('input');
        if (firstInput) {
          setTimeout(() => firstInput.focus(), 100);
        }
      }
    }

    function hideEventModal() {
      if (modal) {
        modal.style.display = 'none';
        modal.setAttribute('aria-hidden', 'true');
      }
    }

    // Event listeners para el modal
    if (eventButton) {
      eventButton.addEventListener('click', showEventModal);
    }

    if (closeModal) {
      closeModal.addEventListener('click', hideEventModal);
    }

    // Cerrar modal al hacer clic fuera de √©l
    if (modal) {
      modal.addEventListener('click', function(event) {
        if (event.target === modal) {
          hideEventModal();
        }
      });
    }

    // Cerrar modal con tecla Escape
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape' && modal && modal.style.display === 'block') {
        hideEventModal();
      }
    });

    // Manejar env√≠o del formulario
    if (eventForm) {
      eventForm.addEventListener('submit', function(event) {
        event.preventDefault();
        
        // Obtener datos del formulario
        const formData = new FormData(eventForm);
        const nombre = formData.get('nombre');
        const email = formData.get('email');
        const telefono = formData.get('telefono');

        // Validaci√≥n b√°sica
        if (!nombre || !email || !telefono) {
          alert('Por favor, completa todos los campos');
          return;
        }

        // Simular env√≠o exitoso
        alert(`¬°Gracias ${nombre}! Tu reserva ha sido enviada. Te contactaremos pronto.`);
        
