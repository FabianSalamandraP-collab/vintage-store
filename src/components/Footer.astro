<style>
  /* üéØ FOOTER PUBLICITARIO BASE */
  footer {
    background: linear-gradient(135deg, #1a1a1a 0%, #000000 50%, #1a1a1a 100%);
    color: #F5DEB3;
    margin-top: auto;
    border-top: 3px solid #8B4135;
    position: relative;
    overflow: hidden;
  }

  footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: -50%;
    width: 200%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #dc2626, #105585, #8B4135, transparent);
    animation: shimmer 3s infinite;
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  /* üéµ SECCI√ìN PRINCIPAL DE PROMOCIONES */
  .promo-section {
    padding: 2rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Banner Principal del Evento */
  .main-banner {
    background: linear-gradient(135deg, #0A415C, #0A415C);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
    position: relative;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    animation: pulseGlow 4s ease-in-out infinite;
  }

  @keyframes pulseGlow {
    0%, 100% { box-shadow: 0 8px 32px rgba(139, 65, 53, 0.3); }
    50% { box-shadow: 0 12px 40px rgba(16, 85, 133, 0.4); }
  }

  .banner-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .banner-text {
    flex: 1;
  }

  .banner-title {
    font-size: 2.5rem;
    margin: 0 0 0.5rem 0;
    background: linear-gradient(45deg, #F5DEB3, #FFD700);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: textShine 2s ease-in-out infinite;
  }

  @keyframes textShine {
    0%, 100% { filter: brightness(1); }
    50% { filter: brightness(1.2); }
  }

  .banner-subtitle {
    font-size: 1.2rem;
    margin: 0 0 1rem 0;
    color: #F5DEB3;
  }

  .event-details {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
    flex-wrap: wrap;
  }

  .event-date,
  .event-location {
    background: rgba(245, 222, 179, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    border: 1px solid rgba(245, 222, 179, 0.3);
  }

  .cta-button {
    background: linear-gradient(135deg, #dc2626, #dc2626);
    color: #F5DEB3;
    border: none;
    padding: 1rem 2rem;
    border-radius: 25px;
    font-size: 1.1rem;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 107, 53, 0.4);
    animation: buttonPulse 2s infinite;
    text-decoration: none;
    display: inline-block;
  }

  @keyframes buttonPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .cta-button:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 8px 25px rgba(255, 107, 53, 0.6);
  }

  /* Visual del Banner */
  .banner-visual {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .rotating-vinyl {
    font-size: 4rem;
    animation: rotate 4s linear infinite;
    filter: drop-shadow(0 0 20px rgba(245, 222, 179, 0.5));
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .music-waves {
    position: absolute;
    display: flex;
    gap: 0.3rem;
    align-items: end;
  }

  .wave {
    width: 4px;
    background: linear-gradient(to top, #F5DEB3, #FFD700);
    border-radius: 2px;
    animation: waveAnimation 1.5s ease-in-out infinite;
  }

  .wave:nth-child(1) {
    height: 20px;
    animation-delay: 0s;
  }

  .wave:nth-child(2) {
    height: 30px;
    animation-delay: 0.2s;
  }

  .wave:nth-child(3) {
    height: 15px;
    animation-delay: 0.4s;
  }

  @keyframes waveAnimation {
    0%, 100% { transform: scaleY(1); }
    50% { transform: scaleY(0.5); }
  }

  /* Grid de Artistas */
  .artists-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .artist-card {
    background: rgba(245, 222, 179, 0.05);
    border-radius: 12px;
    padding: 1.5rem;
    border: 1px solid rgba(245, 222, 179, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .artist-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(139, 65, 53, 0.2);
  }

  .artist-image {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80px;
    margin-bottom: 1rem;
  }

  .placeholder-image {
    font-size: 3rem;
    opacity: 0.7;
  }

  .play-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .artist-card:hover .play-overlay {
    opacity: 1;
  }

  .artist-info h3 {
    color: #F5DEB3;
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
  }

  .artist-info p {
    color: #CD853F;
    font-size: 0.9rem;
    margin: 0 0 1rem 0;
  }

  .artist-tag {
    background: linear-gradient(135deg, #dc2626, #dc2626);
    color: #F5DEB3;
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: bold;
  }

  .promo-card {
    background: linear-gradient(135deg, #dc2626, #dc2626);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    animation: promoPulse 3s ease-in-out infinite;
  }

  @keyframes promoPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
  }

  .promo-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .promo-content h3 {
    margin: 0 0 0.5rem 0;
    color: #F5DEB3;
  }

  .promo-content p {
    color: rgba(245, 222, 179, 0.9);
    margin: 0 0 1rem 0;
  }

  .promo-code {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: bold;
    display: inline-block;
  }

  /* üéµ SECCI√ìN REPRODUCTOR SPOTIFY */
  .music-section {
    background: rgba(245, 222, 179, 0.02);
    padding: 2rem 1rem;
    border-top: 1px solid rgba(245, 222, 179, 0.1);
  }

  .music-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .music-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .music-title {
    color: #F5DEB3;
    font-size: 1.5rem;
    margin: 0;
  }

  .spotify-container {
    margin-bottom: 1.5rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .playlist-info {
    text-align: center;
    color: #CD853F;
  }

  .spotify-link {
    color: #1db954;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease;
  }

  .spotify-link:hover {
    color: #1ed760;
  }

  /* Footer Bottom */
  .footer-bottom {
    background: rgba(0, 0, 0, 0.3);
    padding: 1rem;
    border-top: 1px solid rgba(245, 222, 179, 0.1);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-left {
    color: #CD853F;
    font-size: 0.9rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  /* Estilos para el logo del footer */
  .footer-logo {
    margin-bottom: 0.5rem;
  }

  .footer-logo-img {
    width: 60px;
    height: 60px;
    object-fit: contain;
    filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.5)) brightness(1.1);
    transition: all 0.3s ease;
    background: rgba(245, 222, 179, 0.1);
    border-radius: 8px;
    padding: 4px;
  }

  .footer-logo-img:hover {
    transform: scale(1.2) rotate(5deg);
    filter: drop-shadow(3px 3px 8px rgba(245, 222, 179, 0.7)) brightness(1.3);
    background: rgba(245, 222, 179, 0.2);
  }

  .footer-right {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    color: #F5DEB3;
    font-size: 1.2rem;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .social-links a:hover {
    color: #FFD700;
    transform: scale(1.2);
  }

  /* üì± Responsividad */
  @media (max-width: 768px) {
    .banner-content {
      flex-direction: column;
      text-align: center;
    }

    .banner-visual {
      margin-top: 2rem;
    }

    .event-details {
      justify-content: center;
    }

    .footer-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
