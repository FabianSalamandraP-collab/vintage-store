    transform: translateY(-2px);
  }

  .logo-image {
    display: block;
    border-radius: 8px;
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    animation: logoBreath 6s ease-in-out infinite;
    box-shadow: 0 2px 8px rgba(220, 38, 38, 0.15);
  }

  @keyframes logoBreath {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
      box-shadow: 0 2px 8px rgba(220, 38, 38, 0.15);
    }
    50% {
      transform: scale(1.02);
      opacity: 0.95;
      box-shadow: 0 3px 12px rgba(220, 38, 38, 0.2);
    }
  }

  .logo-image:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 16px rgba(220, 38, 38, 0.25);
    border-radius: 10px;
    opacity: 0.9;
  }

  .brand-section {
    flex-shrink: 0;
  }

  .brand-name {
    height: 5rem;
    width: auto;
    max-width: 400px;
    object-fit: contain;
    filter: drop-shadow(0 0 10px rgba(245, 222, 179, 0.3));
  }

  @keyframes titleGlow {
    0%, 100% {
      filter: drop-shadow(0 0 10px rgba(245, 222, 179, 0.3));
    }
    50% {
      filter: drop-shadow(0 0 20px rgba(245, 222, 179, 0.6)) drop-shadow(0 0 30px rgba(245, 222, 179, 0.4));
    }
  }

  .main-nav {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    margin-right: -4rem;
  }

  .nav-list {
    display: flex;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .nav-item {
    margin: 0;
  }

  .nav-link {
    color: #F5DEB3;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    position: relative;
    overflow: hidden;
    text-shadow: 0 0 8px rgba(245, 222, 179, 0.3);
  }

  /* Animaciones individuales para cada nav-link */
  .nav-link:nth-child(1) {
    animation: navGentle 4s ease-in-out infinite;
  }

  .nav-link:nth-child(2) {
    animation: navSoft 3.5s ease-in-out infinite;
  }

  .nav-link:nth-child(3) {
    animation: navSubtle 4.5s ease-in-out infinite;
  }

  .nav-link:nth-child(4) {
    animation: navCalm 3.8s ease-in-out infinite;
  }

  /* Keyframes para Suave Respiración */
  @keyframes navGentle {
    0%, 100% {
      transform: scale(1);
      text-shadow: 0 0 3px rgba(220, 38, 38, 0.3);
      opacity: 1;
    }
    50% {
      transform: scale(1.02);
      text-shadow: 0 0 5px rgba(220, 38, 38, 0.4);
      opacity: 0.95;
    }
  }

  /* Keyframes para Brillo Suave */
  @keyframes navSoft {
    0%, 100% {
      text-shadow: 0 0 2px rgba(220, 38, 38, 0.2);
      filter: brightness(1);
    }
    33% {
      text-shadow: 0 0 4px rgba(220, 38, 38, 0.35);
      filter: brightness(1.05);
    }
    66% {
      text-shadow: 0 0 3px rgba(239, 68, 68, 0.3);
      filter: brightness(1.03);
    }
  }

  /* Keyframes para Movimiento Sutil */
  @keyframes navSubtle {
    0%, 100% {
      transform: translateY(0px);
      text-shadow: 0 0 2px rgba(220, 38, 38, 0.25);
    }
    25% {
      transform: translateY(-1px);
      text-shadow: 0 0 3px rgba(220, 38, 38, 0.3);
    }
    75% {
      transform: translateY(1px);
      text-shadow: 0 0 3px rgba(239, 68, 68, 0.3);
    }
  }

  /* Keyframes para Calma Tranquila */
  @keyframes navCalm {
    0%, 100% {
      transform: scale(1) rotate(0deg);
      text-shadow: 0 0 2px rgba(220, 38, 38, 0.2);
      opacity: 1;
    }
    30% {
      transform: scale(1.01) rotate(0.2deg);
      text-shadow: 0 0 3px rgba(220, 38, 38, 0.3);
      opacity: 0.98;
    }
    70% {
      transform: scale(1.01) rotate(-0.2deg);
      text-shadow: 0 0 3px rgba(239, 68, 68, 0.25);
      opacity: 0.98;
    }
  }

  /* Efectos de línea inferior para todos */
  .nav-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #F5DEB3, #FFD700, #F5DEB3);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateX(-50%);
    box-shadow: 0 0 5px rgba(255, 215, 0, 0.5);
  }

  /* Efectos hover mejorados */
  .nav-link:hover,
  .nav-link[aria-current="page"] {
    background: linear-gradient(135deg, rgba(220, 38, 38, 0.15), rgba(239, 68, 68, 0.08));
    color: #dc2626;
    text-shadow: 0 0 8px rgba(220, 38, 38, 0.8), 0 0 15px rgba(239, 68, 68, 0.4);
    transform: translateY(-2px) scale(1.05);
    border-radius: 8px;
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.2);
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .nav-link:hover::before,
  .nav-link[aria-current="page"]::before {
    width: 100%;
    height: 2px;
    box-shadow: 0 0 8px rgba(220, 38, 38, 0.6);
  }

  /* Efecto de partículas mejorado */
  .nav-link::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: radial-gradient(circle, rgba(220, 38, 38, 0.3) 0%, rgba(239, 68, 68, 0.15) 50%, transparent 70%);
    border-radius: 50%;
    transition: all 0.4s ease-out;
    transform: translate(-50%, -50%);
    z-index: -1;
    opacity: 0;
  }

  .nav-link:hover::after {
    width: 80px;
    height: 80px;
    opacity: 1;
    animation: gentleGlow 2s ease-in-out infinite;
  }

  @keyframes gentleGlow {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.6;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.1);
      opacity: 0.8;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header-container {
      gap: 1rem;
      padding: 0 1.5rem;
    }

    .nav-list {
      gap: 1rem;
    }

    .nav-link {
      padding: 0.25rem 0.5rem;
      font-size: 0.9rem;
    }

    .brand-name {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .header-container {
      flex-wrap: wrap;
      padding: 0 1rem;
    }

    .main-nav {
      order: 3;
      flex-basis: 100%;
      justify-content: center;
      margin-top: 0.5rem;
      margin-right: 0; /* reset desplazamiento en móvil */
    }

    .nav-list {
      gap: 0.5rem;
    }
  }
</style>


