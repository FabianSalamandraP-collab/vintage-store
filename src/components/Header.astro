// Header.astro - Componente de encabezado principal
---

<header class="header header--style-pill" itemscope itemtype="https://schema.org/Organization">
  <div class="header-container">
    <!-- Logo separado -->
    <div class="logo-section">
      <a href="/" class="logo-link" aria-label="Ir al inicio">
        <img 
          src="/clothesSurOccidente.png" 
          alt="Sur Occidente Logo" 
          class="logo-image"
          itemprop="logo"
          width="100" 
          height="100"
        />
      </a>
    </div>

    <!-- Marca separada -->
    <div class="brand-section">
      <img src="/so.png" alt="Sur Occidente" class="brand-name" itemprop="name" />
    </div>

    <!-- Navegacion principal -->
    <nav class="main-nav" role="navigation" aria-label="Navegacion principal">
      <ul class="nav-list">
        <li class="nav-item">
          <a href="/" class="nav-link" aria-current="page">Inicio</a>
        </li>
        <li class="nav-item">
          <a href="/productos" class="nav-link">Productos</a>
        </li>
        <li class="nav-item">
          <a href="/sobre-nosotros" class="nav-link">Sobre Nosotros</a>
        </li>
        <li class="nav-item">
          <a href="/contacto" class="nav-link">Contacto</a>
        </li>
        <li class="nav-item wishlist-nav">
          <a href="#" id="wishlist-trigger" class="nav-link wishlist-link" aria-label="Favoritos" aria-expanded="false" aria-controls="wishlist-panel">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" class="wishlist-icon">
              <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 6 4 4 6.5 4c1.74 0 3.41 1.01 4.22 2.58C12.09 5.01 13.76 4 15.5 4 18 4 20 6 20 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
            </svg>
            <span class="wishlist-count" id="wishlist-count">0</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<!-- Wishlist Panel -->
<div id="wishlist-panel" class="wishlist-panel" role="dialog" aria-modal="false" aria-labelledby="wishlist-title" hidden>
  <div class="wishlist-panel-header">
    <h3 id="wishlist-title">Favoritos</h3>
    <button class="wishlist-close-btn" aria-label="Cerrar favoritos">&times;</button>
  </div>
  <div class="wishlist-panel-body">
    <ul id="wishlist-items" class="wishlist-items"></ul>
    <div id="wishlist-empty" class="wishlist-empty">No tienes favoritos aún.</div>
  </div>
  <div class="wishlist-panel-footer">
    <div class="wishlist-total">
      <span>Total</span>
      <strong id="wishlist-total">$0</strong>
    </div>
    <div class="wishlist-actions">
      <button id="wishlist-clear" class="wishlist-clear-btn">Vaciar</button>
    </div>
  </div>
</div>

<script is:inline>
(function(){
  const trigger = document.getElementById('wishlist-trigger');
  const panel = document.getElementById('wishlist-panel');
  const formatCOP = (price) => new Intl.NumberFormat('es-CO',{style:'currency',currency:'COP',minimumFractionDigits:0,maximumFractionDigits:0}).format(Number(price||0));
  const escapeHTML = (str) => String(str||'').replace(/[&<>"']/g, s => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[s]));
  function renderWishlistPanel(){
    if (!panel) return;
    const list = window.getWishlist ? window.getWishlist() : [];
    const itemsEl = panel.querySelector('#wishlist-items');
    const emptyEl = panel.querySelector('#wishlist-empty');
    const totalEl = panel.querySelector('#wishlist-total');
    let total = 0;
    itemsEl.innerHTML = list.map(item => {
      total += Number(item.price||0);
      const name = escapeHTML(item.name);
      const price = formatCOP(item.price);
      const url = item.url || '#';
      const image = item.image || '/images/placeholder.svg';
      return `
        <li class="wishlist-item">
          <a href="${url}" class="wishlist-item-image">
            <img src="${image}" alt="${name}" loading="lazy" />
          </a>
          <div class="wishlist-item-info">
            <a href="${url}" class="wishlist-item-name">${name}</a>
            <div class="wishlist-item-price">${price}</div>
          </div>
          <button class="wishlist-remove-btn" data-product-id="${item.id}" aria-label="Quitar de favoritos">Quitar</button>
        </li>
      `;
    }).join('');
    totalEl.textContent = formatCOP(total);
    emptyEl.style.display = list.length ? 'none' : 'block';
    const cntEl = document.getElementById('wishlist-count');
    if (cntEl) cntEl.textContent = String(list.length);
  }
  function openWishlistPanel(){
    if (!panel || !trigger) return;
    panel.hidden = false;
    trigger.setAttribute('aria-expanded','true');
    renderWishlistPanel();
    panel.querySelector('.wishlist-close-btn')?.focus();
    document.addEventListener('click', handleOutsideClick, { capture: true });
    document.addEventListener('keydown', handleEsc);
  }
  function closeWishlistPanel(){
    if (!panel || !trigger) return;
    panel.hidden = true;
    trigger.setAttribute('aria-expanded','false');
    document.removeEventListener('click', handleOutsideClick, { capture: true });
    document.removeEventListener('keydown', handleEsc);
  }
  function toggleWishlistPanel(){ panel?.hidden ? openWishlistPanel() : closeWishlistPanel(); }
  function handleOutsideClick(e){
    const target = e.target;
    if (!(target instanceof Node)) return;
    if (!panel?.contains(target) && !trigger?.contains(target)){ closeWishlistPanel(); }
  }
  function handleEsc(e){ if (e.key === 'Escape') closeWishlistPanel(); }

  trigger?.addEventListener('click', (e) => { e.preventDefault(); toggleWishlistPanel(); });
  panel?.addEventListener('click', (e) => {
    const closeBtn = (e.target instanceof Element) ? e.target.closest('.wishlist-close-btn') : null;
    if (closeBtn){ closeWishlistPanel(); return; }
    const removeBtn = (e.target instanceof Element) ? e.target.closest('.wishlist-remove-btn') : null;
    if (removeBtn){
      const id = removeBtn.getAttribute('data-product-id') || '';
      if (window.toggleWishlist) {
        window.toggleWishlist({ id });
      }
      renderWishlistPanel();
    }
  });
  document.getElementById('wishlist-clear')?.addEventListener('click', () => {
    const list = window.getWishlist ? window.getWishlist() : [];
    list.forEach(item => window.toggleWishlist && window.toggleWishlist({ id: item.id }));
    renderWishlistPanel();
  });

  window.addEventListener('wishlist:change', (ev) => {
    renderWishlistPanel();
    const icon = document.querySelector('.wishlist-icon');
    if (icon) {
      icon.classList.add('heartbeat');
      setTimeout(() => icon.classList.remove('heartbeat'), 700);
    }
  });

  document.addEventListener('DOMContentLoaded', () => { renderWishlistPanel(); });
})();
</script>

