<script is:inline>
(function(){
  const KEY = 'wishlist';
  function getWishlist(){
    try { return JSON.parse(localStorage.getItem(KEY) || '[]'); } catch(e){ return []; }
  }
  function saveWishlist(list){ localStorage.setItem(KEY, JSON.stringify(list)); }
  function updateWishlistCount(){
    const el = document.getElementById('wishlist-count');
    if (!el) return;
    el.textContent = String(getWishlist().length);
  }
  function refreshWishlistUI(){
    const list = getWishlist();
    const ids = new Set(list.map(i => i.id));
    document.querySelectorAll('.wishlist-btn[data-product-id]').forEach(btn => {
      const id = btn.getAttribute('data-product-id');
      const active = id && ids.has(id);
      btn.classList.toggle('active', !!active);
      btn.setAttribute('aria-pressed', active ? 'true' : 'false');
      const label = active ? 'Quitar de favoritos' : 'Agregar a favoritos';
      btn.setAttribute('aria-label', label);
    });
  }
  function toggleWishlist(item){
    const list = getWishlist();
    const idx = list.findIndex(i => i.id === item.id);
    let action;
    if (idx >= 0){ list.splice(idx, 1); action = 'remove'; }
    else { list.push(item); action = 'add'; }
    saveWishlist(list);
    updateWishlistCount();
    refreshWishlistUI();
    window.dispatchEvent(new CustomEvent('wishlist:change', { detail: { action, item } }));
  }
  window.toggleWishlist = toggleWishlist;
  window.getWishlist = getWishlist;

  document.addEventListener('click', (e) => {
    const target = e.target instanceof Element ? e.target.closest('.wishlist-btn') : null;
    if (!target) return;
    const item = {
      id: target.getAttribute('data-product-id'),
      name: target.getAttribute('data-product-name'),
      price: Number(target.getAttribute('data-product-price')),
      image: target.getAttribute('data-product-image'),
      url: target.getAttribute('data-product-url') || ''
    };
    toggleWishlist(item);
  });

  window.addEventListener('storage', (ev) => {
    if (ev.key === KEY){
      updateWishlistCount();
      refreshWishlistUI();
    }
  });

  document.addEventListener('DOMContentLoaded', () => {
    updateWishlistCount();
    refreshWishlistUI();
  });
})();
</script>

<style>
