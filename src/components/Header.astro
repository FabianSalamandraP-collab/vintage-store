<style>
  /* Variantes de estilos para los nav-links */
  /* PILL */
  .header--style-pill .nav-link {
    border: 1.5px solid #F5DEB3;
    border-radius: 9999px;
    padding: 0.5rem 1rem;
    background: transparent;
    color: #F5DEB3;
    box-shadow: none;
  }
  .header--style-pill .nav-link::before {
    width: 0 !important;
    height: 0 !important;
    opacity: 0 !important;
    box-shadow: none !important;
  }
  .header--style-pill .nav-link::after {
    width: 0 !important;
    height: 0 !important;
    opacity: 0 !important;
    box-shadow: none !important;
  }
  .header--style-pill .nav-link:hover,
  .header--style-pill .nav-link[aria-current="page"] {
    background: #F5DEB3;
    color: #1a1a1a;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(245, 222, 179, 0.35);
    border-radius: 9999px;
  }

  /* UNDERLINE */
  .header--style-underline .nav-link {
    background: transparent;
    box-shadow: none;
    color: #F5DEB3;
  }
  .header--style-underline .nav-link:hover,
  .header--style-underline .nav-link[aria-current="page"] {
    background: transparent;
    color: #F5DEB3;
    transform: translateY(-1px);
    box-shadow: none;
  }
  .header--style-underline .nav-link::before {
    height: 2px;
    width: 0;
    background: linear-gradient(90deg, #F5DEB3, #FFD700, #F5DEB3);
    box-shadow: 0 0 5px rgba(255, 215, 0, 0.5);
  }
  .header--style-underline .nav-link:hover::before,
  .header--style-underline .nav-link[aria-current="page"]::before {
    width: 100%;
  }
  .header--style-underline .nav-link::after {
    width: 0;
    height: 0;
    opacity: 0;
  }

  /* NEON */
  .header--style-neon .nav-link {
    background: transparent;
    color: #F5DEB3;
    border-radius: 6px;
    text-shadow: 0 0 6px rgba(245, 222, 179, 0.6), 0 0 12px rgba(255, 215, 0, 0.4);
    box-shadow: none;
  }
  .header--style-neon .nav-link:hover,
  .header--style-neon .nav-link[aria-current="page"] {
    background: rgba(255, 215, 0, 0.08);
    color: #FFD700;
    box-shadow: 0 0 12px rgba(255, 215, 0, 0.35), inset 0 0 8px rgba(255, 215, 0, 0.25);
    transform: translateY(-2px) scale(1.03);
  }
</style>